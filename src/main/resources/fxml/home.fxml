<VBox prefHeight="729.0" prefWidth="1335.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unicam.cs.twopie.tarnas.view.HomeController">
    <children>
        <MenuBar prefHeight="0.0" prefWidth="500.0" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Scrivi file"/>
                        <MenuItem mnemonicParsing="false" text="Carica cartella"/>
                        <MenuItem mnemonicParsing="false" text="Carica file"/>
                        <Menu mnemonicParsing="false" text="Open Recent"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Restore"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Preferences…"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Quit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About MyHelloApp"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="811.0" maxWidth="1322.0" prefHeight="811.0" prefWidth="1322.0" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="filesTable" editable="true" layoutX="81.0" layoutY="123.0" prefHeight="263.0"
                           prefWidth="1227.0" stylesheets="@../css/home.css">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="308.80003356933594" resizable="false"
                                     sortable="false" style="-fx-alignment: CENTER;" text="File Name"/>
                        <TableColumn fx:id="formatColumn" minWidth="0.0" prefWidth="138.39996337890625"
                                     resizable="false" sortable="false" style="-fx-alignment: CENTER;" text="Format"/>
                        <TableColumn fx:id="previewColumn" prefWidth="222.39996337890625" style="-fx-alignment: CENTER;"
                                     text="Preview"/>
                        <TableColumn fx:id="deleteColumn" prefWidth="556.7999755859375" resizable="false"
                                     sortable="false" style="-fx-alignment: CENTER;" text="Delete"/>
                    </columns>
                </TableView>
                <Button layoutX="81.0" layoutY="614.0" mnemonicParsing="false" onAction="#handleAddFile"
                        prefHeight="26.0" prefWidth="142.0" text="AGGIUNGI FILE"/>
                <Button layoutX="81.0" layoutY="654.0" mnemonicParsing="false" onAction="#handleAddFolder"
                        prefHeight="26.0" prefWidth="142.0" text="AGGIUNGI CARTELLA"/>
                <Label alignment="CENTER" layoutX="561.0" layoutY="59.0" prefHeight="17.0" prefWidth="267.0"
                       text="TARNAS" textAlignment="CENTER" textFill="#0088ff">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Label>
                <Label fx:id="lblRecognizedFormat" layoutX="81.0" layoutY="95.0" prefHeight="18.0" prefWidth="385.0"
                       visible="false"/>
                <Button layoutX="900.0" layoutY="654.0" mnemonicParsing="false" onAction="#resetAll" prefHeight="25.0"
                        prefWidth="92.0" text="RESET"/>
                <AnchorPane fx:id="paneCleaner" layoutX="344.0" layoutY="408.0" prefHeight="246.0" prefWidth="526.0">
                    <children>
                        <Label layoutX="304.0" layoutY="14.0" text="PULITURA"/>
                        <Button layoutX="271.0" layoutY="206.0" mnemonicParsing="false" onAction="#handleClean"
                                prefHeight="26.0" prefWidth="106.0" text="Pulisci"/>
                        <GridPane layoutX="188.0" layoutY="46.0" prefHeight="154.0" prefWidth="460.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <CheckBox fx:id="chbxRmLinesContainingWord" mnemonicParsing="false" prefHeight="25.0"
                                          prefWidth="234.0" text="Righe di “intestazione” che contengono"/>
                                <CheckBox fx:id="chbxRmLinesContainingPrefix" mnemonicParsing="false" prefHeight="18.0"
                                          prefWidth="218.0" text="commenti: righe che iniziano con"
                                          GridPane.rowIndex="1"/>
                                <CheckBox fx:id="chbxMergeLines" mnemonicParsing="false" prefHeight="21.0"
                                          prefWidth="256.0" text="accorpa le righe (DB/DB NO SEQUENCE)"
                                          GridPane.rowIndex="3"/>
                                <CheckBox fx:id="chbxRmBlankLines" mnemonicParsing="false"
                                          text="righe vuote (anche con spazi, tab ecc)" GridPane.rowIndex="2"/>
                                <TextField fx:id="txtfRmLinesContainingWord" prefHeight="26.0" prefWidth="204.0"
                                           GridPane.columnIndex="1"/>
                                <TextField fx:id="txtRmLinesContainingPrefix" prefHeight="8.0" prefWidth="154.0"
                                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="paneTranslator" layoutX="1008.0" layoutY="400.0" prefHeight="246.0"
                            prefWidth="299.0">
                    <children>
                        <CheckBox fx:id="chbxIncludeHeader" layoutX="14.0" layoutY="79.0" mnemonicParsing="false"
                                  text="includi header"/>
                        <MenuButton fx:id="btnSelectFormatTranslation" layoutX="166.0" layoutY="47.0"
                                    mnemonicParsing="false" text="Traduci in">
                            <items>
                                <MenuItem fx:id="itmAAS" mnemonicParsing="false" text="AAS"/>
                                <MenuItem fx:id="itmAASNS" mnemonicParsing="false" text="AAS NO SEQUENCE"/>
                                <MenuItem fx:id="itmBPSEQ" mnemonicParsing="false" text="BPSEQ"/>
                                <MenuItem fx:id="itmCT" mnemonicParsing="false" text="CT"/>
                                <MenuItem fx:id="itmDB" mnemonicParsing="false" text="DOT BRACKET"/>
                                <MenuItem fx:id="itmDBNS" mnemonicParsing="false" text="DOT BRACKET NO SEQUENCE"/>
                                <MenuItem fx:id="itmFASTA" mnemonicParsing="false" text="FASTA"/>
                            </items>
                        </MenuButton>
                        <CheckBox fx:id="chkbxSaveAsZIP" layoutX="13.0" layoutY="117.0" mnemonicParsing="false"
                                  text="salva come zip"/>
                        <Label layoutX="99.0" layoutY="5.0" text="TRADUZIONE"/>
                        <TextField fx:id="lblArchiveName" layoutX="150.0" layoutY="112.0" prefHeight="26.0"
                                   prefWidth="115.0" promptText="nome zip"/>
                        <Button fx:id="btnTranslateAllLoadedFiles" layoutX="14.0" layoutY="165.0"
                                mnemonicParsing="false" onAction="#translateAllLoadedFiles" prefHeight="25.0"
                                prefWidth="121.0" text="Traduci"/>
                    </children>
                </AnchorPane>
                <Button fx:id="btnWriteContent" layoutX="81.0" layoutY="386.0" mnemonicParsing="false"
                        onAction="#handleWriteContent" prefHeight="25.0" prefWidth="142.0" text="SCRIVI CONTENUTO"/>
                <TextArea fx:id="txtAreaWriteContent" layoutX="81.0" layoutY="411.0" prefHeight="203.0"
                          prefWidth="400.0"/>
                <Button fx:id="btnCancelWriteContent" layoutX="81.0" layoutY="387.0" mnemonicParsing="false"
                        onAction="#handleCancelWriteContent" prefHeight="25.0" prefWidth="71.0" text="ANNULLA"/>
                <Button fx:id="btnSaveWroteContent" layoutX="152.0" layoutY="387.0" mnemonicParsing="false"
                        onAction="#handleSaveWroteContent" prefHeight="25.0" prefWidth="71.0" text="SALVA CONTENUTO"/>
            </children>
        </AnchorPane>
    </children>
</VBox>
