<VBox prefHeight="729.0" prefWidth="1335.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unicam.cs.twopie.tarnas.view.HomeController">
    <children>
        <MenuBar prefHeight="0.0" prefWidth="500.0" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Scrivi file"/>
                        <MenuItem mnemonicParsing="false" text="Carica cartella"/>
                        <MenuItem mnemonicParsing="false" text="Carica file"/>
                        <Menu mnemonicParsing="false" text="Open Recent"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Restore"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Preferences…"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Quit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About MyHelloApp"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="811.0" maxWidth="1322.0" prefHeight="811.0" prefWidth="1322.0" VBox.vgrow="ALWAYS">
            <children>
                <ButtonBar layoutX="205.0" layoutY="158.0" prefHeight="60.0" prefWidth="231.0" visible="false">
                    <buttons>
                        <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="107.0" text="carica cartella"/>
                        <Button mnemonicParsing="false" text="carica file"/>
                    </buttons>
                </ButtonBar>
                <TableView fx:id="filesTable" editable="true" layoutX="74.0" layoutY="129.0" prefHeight="263.0"
                           prefWidth="1227.0" stylesheets="@../css/home.css">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="308.80003356933594" resizable="false"
                                     sortable="false" style="-fx-alignment: CENTER;" text="File Name"/>
                        <TableColumn fx:id="formatColumn" minWidth="0.0" prefWidth="138.39996337890625"
                                     resizable="false" sortable="false" style="-fx-alignment: CENTER;" text="Format"/>
                        <TableColumn fx:id="previewColumn" prefWidth="222.39996337890625" text="Preview"/>
                        <TableColumn fx:id="deleteColumn" prefWidth="556.7999755859375" resizable="false"
                                     sortable="false" style="-fx-alignment: CENTER;" text="Delete"/>
                    </columns>
                </TableView>
                <Button layoutX="51.0" layoutY="429.0" mnemonicParsing="false" onAction="#handleAddFile"
                        prefHeight="25.0" prefWidth="92.0" text="ADD FILE"/>
                <MenuButton fx:id="btnSelectFormatTranslation" layoutX="1160.0" layoutY="589.0" mnemonicParsing="false"
                            text="TRANSLATE TO...">
                    <items>
                        <MenuItem fx:id="itmAAS" mnemonicParsing="false" text="AAS"/>
                        <MenuItem fx:id="itmAASNS" mnemonicParsing="false" text="AAS NO SEQUENCE"/>
                        <MenuItem fx:id="itmBPSEQ" mnemonicParsing="false" text="BPSEQ"/>
                        <MenuItem fx:id="itmCT" mnemonicParsing="false" text="CT"/>
                        <MenuItem fx:id="itmDB" mnemonicParsing="false" text="DOT BRACKET"/>
                        <MenuItem fx:id="itmDBNS" mnemonicParsing="false" text="DOT BRACKET NO SEQUENCE"/>
                        <MenuItem fx:id="itmFASTA" mnemonicParsing="false" text="FASTA"/>
                    </items>
                </MenuButton>
                <GridPane layoutX="632.0" layoutY="435.0" prefHeight="130.0" prefWidth="385.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <CheckBox mnemonicParsing="false" prefHeight="25.0" prefWidth="234.0"
                                  text="Righe di “intestazione” che contengono"/>
                        <CheckBox mnemonicParsing="false" text="commenti: righe che iniziano con"
                                  GridPane.rowIndex="1"/>
                        <CheckBox mnemonicParsing="false"
                                  text="accorpa le righe nel formato dot-bracket se sono spezzate"
                                  GridPane.rowIndex="3"/>
                        <CheckBox mnemonicParsing="false" text="righe vuote (anche con spazi, tab ecc)"
                                  GridPane.rowIndex="2"/>
                        <TextField GridPane.columnIndex="1"/>
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </children>
                </GridPane>
                <Button layoutX="187.0" layoutY="429.0" mnemonicParsing="false" onAction="#handleAddFolder"
                        prefHeight="25.0" prefWidth="92.0" text="ADD FOLDER"/>
                <Label alignment="CENTER" layoutX="561.0" layoutY="59.0" prefHeight="17.0" prefWidth="267.0"
                       text="TARNAS" textAlignment="CENTER" textFill="#0088ff">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Label>
                <Label layoutX="14.0" layoutY="95.0" prefHeight="17.0" prefWidth="163.0" text="RECOGNIZED FORMAT"/>
                <Button layoutX="1018.0" layoutY="589.0" mnemonicParsing="false" onAction="#resetAll" prefHeight="25.0"
                        prefWidth="92.0" text="RESET"/>
                <Button layoutX="845.0" layoutY="589.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="92.0"
                        text="CLEAN"/>
                <Button fx:id="btnTranslateAllLoadedFiles" layoutX="1160.0" layoutY="635.0" mnemonicParsing="false"
                        onAction="#translateAllLoadedFiles" prefHeight="25.0" prefWidth="121.0" text="TRANSLATE"/>
            </children>
        </AnchorPane>
    </children>
</VBox>
